.top{
	padding:20rpx 0;
	background-color:#f2f2f2;
}
.back,
.search-btn{
	margin:12rpx 25rpx 0;
}
.back image{
	width:40rpx;
	height:40rpx;	
}
.search{
	margin:0rpx 10rpx;
}
.search input{
	width:500rpx;
	height:64rpx;
	border:1rpx solid #e8e8e8;
	font-size:30rpx;
	background-color:#fff;
	padding:0 20rpx;
}
.list-title{
	font-size:32rpx;
	color:#111;
	font-weight:bold;
	padding:10rpx;
}
.content{
	background-color:#fff;
	min-height:100%;
}
.list-dd{
	display:inline-block;
	padding:10rpx 15rpx;
    margin:5rpx;
    border: 1px solid #e4e4e4;
    color: #484848;
    background-color:#fff9f9;
    border-radius:5rpx;
}
.list-dd-hover{
    background-color:#fff;
}




